<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        
        <link rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="{{ asset('style/base.css') }}">
        <script src="http://code.jquery.com/jquery.js"></script>

        {% block stylesheets %}{% endblock %}

        <style>
        </style>
    </head>
    <body>
        <nav class="navbar navbar-expand-lg {#fixed-top#} sticky-top" id="navbar">
            <a class="navbar-brand" href="{{ path('accueil') }}">Corro.info</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('accueil') }}">Accueil<!--<span class="sr-only">(current)</span>  nav-item active--></a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="true">Lycée</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="{{ path('corro', {'classename': 'Terminale'}) }}">Terminale</a>
                            <a class="dropdown-item" href="{{ path('corro', {'classename': 'Premiere'}) }}">Première</a>
                            <a class="dropdown-item" href="{{ path('corro', {'classename': 'Seconde'}) }}">Seconde</a>
                        </div>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="true">Supérieur</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="{{ path('corro', {'classename': 'Prepa'}) }}">Prépa et FAC</a>
                            <a class="dropdown-item" href="{{ path('corro', {'classename': 'Ingenieur'}) }}">Cycle ingénieur</a>
                        </div>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('forum') }}">Forum</a>
                    </li>
                    {#<li class="nav-item">
                        <a class="nav-link" href="#">A propos</a>
                    </li>#}

                    {% if app.user %}
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('admin') }}">Admin</a>
                            </li>
                        {% endif %}

                        <li class="nav-item">
                            <a href="{{ path('app_logout') }}" class="nav-link">Deconnexion</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a href="{{ path('app_login') }}" class="nav-link">Connexion</a>
                        </li>
                    {% endif %}

                </ul>

                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="text" placeholder="Search">
                    <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>
        </nav>
        {% block body %}{% endblock %}

        {% block javascripts %}{% endblock %}

        <script>
            $('.dropdown').hover(function(){
                $('.dropdown-menu', this).toggle();
            });
        </script>
    </body>
</html>
