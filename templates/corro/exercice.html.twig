<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <script src="http://code.jquery.com/jquery.js"></script>
        <link rel="stylesheet" href="{{ asset('style/corro/exercice2.css') }}">
    </head>

    <body>
        <div class="container container-fluid">
            <div class="row">
                <div class="col">

                    {% if exercices is defined %}

                        <h3 class="matter-name title">{{ matiere.nom }}</h3>

                        {% for chapitre in chapitres %}
                            <div class="chapiter">
                                <p class="chapiter-name"><a href="#" class="chap-link">{{ chapitre.nom }}</a></p>
                                <div class="list-group">
                                    {% for exercice in exercices %}
                                        {% if exercice.chapitre == chapitre %}
                                            <a href="{{ asset('uploads/exercises/' ~ exercice.fichier) }}" class="list-group-item list-group-item-action" target="_blank">Serie d'exercice 1</a>
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            </div>
                        {% endfor %}

                        {% else %}
                        <p>Les exercices</p>

                        {#{% if fichier is defined %}
                            <p>Serie d'exercice 1</p>

                            <object class="file-class" data="{{ asset('uploads/exercises/' ~ fichier) }}" type="application/pdf" width="100%" height="520"></object>

                            {% else %}
                            <p>Tous les exercices</p>

                        {% endif %}#}

                    {% endif %}
                </div>
            </div>
        </div>

        <script src="{{ asset('javascript/exercice.js') }}"></script>
    </body>
</html>